{
  "schemaVersion": 1,
  "id": "apogee",
  "version": "${version}",
  "name": "Apogee",
  "description": "A small reimagining of Apotheosis for Fabric 1.18+.",
  "authors": [
    "embeddedt",
    "Shadows-of-Fire"
  ],
  "contact": {},
  "license": "LGPLv3",
  "icon": "assets/apogee/icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      "com.embeddedt.apogee.Apogee"
    ],
    "rei_client": [
      "com.embeddedt.apogee.spawner.rei.SpawnerREIClientPlugin"
    ]
  },
  "mixins": [
    "apogee.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=0.14.10",
    "minecraft": ">=1.19.3"
  },
  "accessWidener" : "apogee.accesswidener",
  "custom": {
    "waila:plugins": [
      {
        "id": "apogee:spawner_plugin",
        "initializer": "com.embeddedt.apogee.spawner.SpawnerHwylaPlugin"
      }
    ]
  }
}
